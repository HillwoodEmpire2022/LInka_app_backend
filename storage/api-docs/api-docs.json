    "paths": {
        "/api/chatting/message/send": {
            "post": {
                "summary": "Send a text message",
                "description": "Creates a new chat message",
                "operationId": "0aded20e504861a8fd888efc79dd8f23",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "receiverID": {
                                        "description": "ID of the recipient",
                                        "type": "integer"
                                    },
                                    "senderID": {
                                        "description": "ID of the sender",
                                        "type": "integer"
                                    },
                                    "Conversation_id": {
                                        "description": "ID of the sender",
                                        "type": "integer"
                                    },
                                    "content": {
                                        "description": "The message content",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Message created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "description": "Success message",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "description": "Error details",
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}