            "post": {
                "tags": [
                    "Chatting-Text Messages"
                ],
                "summary": "Send a text message",
                "description": "Creates a new chat message",
                "operationId": "0aded20e504861a8fd888efc79dd8f23",
                "parameters": [
                    {
                        "name": "senderID",
                        "in": "query",
                        "description": "ID of the sender",
                        "required": true
                    },
                    {
                        "name": "receiverID",
                        "in": "query",
                        "description": "ID of the receiver",
                        "required": true
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "content": {
                                        "description": "The message content",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Message created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "description": "Success message",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "errors": {
                                            "description": "Error details",
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
